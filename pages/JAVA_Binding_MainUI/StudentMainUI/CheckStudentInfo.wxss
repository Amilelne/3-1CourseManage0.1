/* CheckStudentInfo.wxss */
/*上方的风景模块*/
.topBoardView
{
    width: 100%;
    height: 300rpx;
}
.topIcon
{
  position:absolute;
  width:100%;
  height:300rpx;
  z-index:1;
}
/*上面的头像*/
.topHead
{
  position: absolute;
  height: 12%;
  width: 20%;
  margin-left: 5%;
  margin-top:5%;
  z-index: 3;
}
/*“点击头像修改”*/
.topClickHead
{
  position:absolute;
  font-size: 25rpx;
  color:grey;
  left: 5%;
  top:15%;
  z-index: 3;
}
/*上面的姓名*/
.topName
{
  position:absolute;
  font-size: 30rpx;
  margin-left: 30%;
  margin-top:10%;
  z-index: 2;
}
/*上面的ID*/
.topID
{
  position:absolute;
  position:absolute;
  font-size: 30rpx;
  margin-left: 30%;
  margin-top:18%;
  z-index: 2;
}
