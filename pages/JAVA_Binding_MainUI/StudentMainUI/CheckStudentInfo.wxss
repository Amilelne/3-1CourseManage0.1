.ID
{
  position:absolute;
  font-size: 40rpx;
  left:20%;
  top:40%;
  z-index: 2;
}
/*姓名的标签*/
.name
{
  position:absolute;
  font-size: 40rpx;
  left:20%;
  top:60%;
  z-index: 2;
}
/*学校的标签*/
.school
{
  position:absolute;
  font-size: 40rpx;
  left:20%;
  top:50%;
  z-index: 2;
}
/*手机*/
.phone
{
  position:absolute;
  font-size: 40rpx;
  left:20%;
