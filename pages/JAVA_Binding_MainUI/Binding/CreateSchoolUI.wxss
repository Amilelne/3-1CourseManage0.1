/* CreateSchoolUI.wxss */
/*上方的风景模块*/
.topBoardView
{
    width: 100%;
    height: 300rpx;
}
.topIcon
{
  position:absolute;
  width:100%;
  height:300rpx;
  z-index:1;
}
/*上面的灯*/
.topLight
{
  position: absolute;
  height: 8%;
  width: 12%;
  margin-left: 5%;
  margin-top:5%;
  z-index: 2;
}
/*上面的线*/
.topLine
{
  position:absolute;
  width:60%;
  height: 1%;
  left: 8%;
  top:12%;
  z-index: 2;
}
/*上面的提示框*/
.topTips
{
  position:absolute;
  font-size: 30rpx;
  margin-left: 20%;
  margin-top:10%;
  z-index: 2;
}
/*下方的主要选择页面*/
.mainView
{
  background-color: #6cf;
  width:100%;
  height: 1000rpx;
}
/*学校名的标签*/
.schoolName
{
  position:absolute;
  font-size: 40rpx;
  left:10%;
  top:57%;
  z-index: 2;
}
/*省的标签*/
.province
{
  position:absolute;
  font-size:40rpx;
  top:35%;
  left:10%;
  z-index: 2;
}
/*市的标签*/
.city
{
  position:absolute;
  font-size:40rpx;
  top:45%;
  left:10%;
  z-index: 2;
}
/*学校名输入框*/
.inputSchool
{
  position:absolute;
  background: #fff;
  width: 350rpx;
  height: 100rpx;
  font-size:40rpx;
  left:30%;
  top:56%;
  z-index:2;
  border-radius: 20rpx;

}
/*确定按钮*/
.confirmButton
{
  width:300rpx;
  height:130rpx;
  font-size: 50rpx;
  top:59%;
}
.tipIcon
{
  position: absolute;
  width: 5%;
  height: 3%;
  left: 24%;
  top:67%;
  z-index: 2;
}
.tipFont
{
    position: absolute;
  font-size: 28rpx;
  color: red;
  left: 30%;
  top:67%;
  z-index: 2;
}