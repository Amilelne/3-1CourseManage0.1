/* ChooseCharater.wxss */
/*上方的风景模块*/
.topBoardView
{
    width: 100%;
    height: 300rpx;
}
.topIcon
{
  position:absolute;
  width:100%;
  height:300rpx;
  z-index:1;
}
/*上面的灯*/
.topLight
{
  position: absolute;
  height: 8%;
  width: 12%;
  margin-left: 5%;
  margin-top:5%;
  z-index: 2;
}
/*上面的线*/
.topLine
{
  position:absolute;
  width:60%;
  height: 1%;
  left: 8%;
  top:12%;
  z-index: 2;
}
/*上面的提示框*/
.topTips
{
  position:absolute;
  font-size: 30rpx;
  margin-left: 20%;
  margin-top:10%;
  z-index: 2;
}
/*下方的主要选择页面*/
.mainView
{
  background-color: #6cf;
  width:100%;
  height: 1000rpx;
}
/*选择老师的按钮*/
.teacherButton
{
  width:300rpx;
  height:130rpx;
  font-size: 50rpx;
  top:20%;
  left: 4%
}
 /*选择同学的按钮*/
