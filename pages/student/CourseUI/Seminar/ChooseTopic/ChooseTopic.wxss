/* pages/StudentClass/CourseUI/Seminar/ChooseTopic/ChooseTopic.wxss */
/* 背景色 */

page {
  background: rgba(102, 204, 255, 0.5);
  width: 100%;
  height: 100%;
  overflow-x: hidden;
  overflow-y: auto;
}

/* 左上角的users图标和文字的容器*/

.blueUsersView {
  width: 80%;
  height: 10%;
  float: left;
  margin-top: 5%;
  margin-left: 10%;
  font-size: 28rpx;
}

/* 左上角的蓝色users图标大小*/

.blueUsersIcon {
  height: 3rem;
  width: 3rem;
  display: inline-block;
}

.title{
  height: 3rem;
  width: 10rem;
  font-size:0.9375rem; 
  display: inline-block;
  vertical-align: top;
  line-height: 3rem;
}

/*黑色线的样式*/

.hrView {
  height: 2rpx;
  width: 80%;
  margin: auto;
  border: 1rpx solid black;
  background-color: black;
  color: black;
  float: right;
  margin-right: 10%;
  margin-top: 2.5%;
  margin-bottom: 5%;
}

/*当选题未选完时的蓝色框*/

.blueTopicView {
  height: 15%;
  background-color: #6cf;
  width: 90%;
  float: left;
  margin-left: 5%;
  border-radius: 50rpx;
  margin-top: 5%;
}

/*当选题未选完时的灰色框*/

.greyTopicView {
  height: 15%;
  background-color: #ccc;
  width: 90%;
  float: left;
  margin-left: 5%;
  border-radius: 50rpx;
  margin-top: 5%;
}

/*选题框左边的选题A/B/C。。。*/

.topic {
  color: #fff;
  float: left;
  font-size: 48rpx;
  margin-top: 8%;
  margin-left: 5%;
}

/*选题框中间的黑色分割线*/

.hrVertical {
  height: 100%;
  width: 0.5%;
  background-color: black;
  color: black;
  float: left;
  margin-left: 10%;
}

/*选题框右边的选题名*/

.topicName {
  color: #fff;
  float: left;
  font-size: 28rpx;
  width: 60%;
  margin-top: 5%;
  margin-left: 5%;
}

/*选题框右边的剩余人数，当人数大于等于2时为白色*/

.leftNumWhite {
  color: #fff;
  float: left;
  font-size: 28rpx;
  margin-top: 5%;
  margin-left: 5%;
}

/*选题框右边的剩余人数，当人数为1时为红色*/

.leftNumRed {
  color: #fa8888;
  float: left;
  font-size: 28rpx;
  margin-top: 5%;
  margin-left: 5%;
}

/*选题框右下角的九点按钮*/

.nineIcon {
  height: 30%;
  width: 8%;
  float: right;
  padding-top: 5%;
  padding-right: 2%;
}

/*选题框下方的选题简介框*/

.topicDescribeView {
  height: 15%;
  background-color: #fff;
  width: 80%;
  float: left;
  margin-left: 10%;
  color: black;
  text-align: center;
}

/*选题框下方的选题简介框里的选题标题*/

.topicDescribeTitle {
  font-size: 28rpx;
  font-weight: bold;
}

/*选题框下方的选题简介框里的选题文本*/

.topicDescribeText {
  font-size: 28rpx;
  float: left;
  word-wrap: break-word;
  width: 100%;
  overflow: hidden;
}
