/* pages/StudentClass/CourseUI/Seminar/SignUP/signup.wxss */
/* 背景色 */

page {
  background: rgba(102, 204, 255, 0.5);
  width: 100%;
  height: 100%;
  overflow-x: hidden;
  overflow-y: auto;
}

/* 左上角的users图标和文字的容器*/

.blueUsersView {
  width: 40%;
  height: 10%;
  float: left;
  margin-top: 5%;
  margin-left: 10%;
  font-size: 28rpx;
}

/* 左上角的蓝色users图标大小*/

.blueUsersIcon {
  width: 40%;
  height: 100%;
  margin-right: 10%;
  margin-top: 50%；;
}

/*黑色线的样式*/

.hrView {
  height: 2rpx;
  width: 80%;
  margin: auto;
  border: 1rpx solid black;
  background-color: black;
  color: black;
  float: right;
  margin-right: 10%;
  margin-top: 100rpx;
  margin-bottom: 100rpx;
}

/**/

.courseInfoView {
  width: 80%;
  height: 5%;
  float: left;
  margin-top: 5%;
  margin-left: 15%;
  font-size: 28rpx;
}

.courseInfoIcon {
  width: 10%;
  height: 60%;
  margin-right: 10%;
  margin-left: 20%;
}

/*成功签到情况下的图标+文本容器*/

.successCall {
  width: 80%;
  height: 5%;
  float: left;
  margin-top: 15%;
  margin-left: 15%;
  font-size: 28rpx;
  color: black;
}

/*迟到签到情况下的图标+文本容器*/

.lateCall {
  width: 80%;
  height: 5%;
  float: left;
  margin-top: 15%;
  margin-left: 15%;
  font-size: 28rpx;
  color: #fa8888;
}

/*蓝色的大button，显示 签到 */

.blueBigBtn {
  background-color: rgba(102, 204, 255, 1);
  color: white;
  font-size: 48rpx;
  width: 290rpx;
  border-radius: 40rpx;
  margin-left: 230rpx;
  margin-top: 150rpx;
  float: left;
}
